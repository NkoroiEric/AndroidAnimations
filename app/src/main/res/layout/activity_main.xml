<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_sentiment_neutral_black_24dp"
      android:id="@+id/emoji"
      android:layout_centerInParent="true"
      />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Fling"
      android:id="@+id/flinger"
      android:layout_alignParentTop="true"
      android:layout_alignParentLeft="true"
      android:onClick="flingIt" />

  <Button
      android:id="@+id/stretch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/flinger"
      android:layout_toLeftOf="@id/bounce"
      android:onClick="stretch"
      android:text="Stretch"/>

  <Button
      android:id="@+id/transition"
      android:text="Transition"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="transition"
      android:layout_below="@id/flinger" />

  <Button
      android:id="@+id/bounce"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Bounce"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:onClick="bounce" />


</RelativeLayout>